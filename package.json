{
  "name": "krown",
  "version": "0.1.0",
  "description": "Krown - Centralisateur de sessions SSH",
  "private": true,
  "scripts": {
    "install": "npm run install:all",
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:backend": "powershell -ExecutionPolicy Bypass -File scripts/install-backend.ps1",
    "install:frontend": "cd frontend && npm install",
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend-only": "cd frontend && npm run dev",
    "dev:backend": "powershell -ExecutionPolicy Bypass -File scripts/run-backend.ps1",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && cargo build --release",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm-run-all --parallel start:backend start:frontend",
    "start:backend": "cd backend && cargo run --release",
    "start:frontend": "cd frontend && npm run preview"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

